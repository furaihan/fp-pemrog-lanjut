<UserControl x:Class="PinusPengger.Controller.ReservasiController"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PinusPengger.View"
             mc:Ignorable="d" 
             d:DesignHeight="420" 
             d:DesignWidth="920">
    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="20"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="290"/>
            <RowDefinition Height="10"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="1"
                    Margin="5,0,0,0"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center">
            <TextBlock Text="Kategori"
                       FontWeight="Bold"/>
            <ComboBox Height="25" 
                      Width="200"
                      Text="Pilih Kategori">
                <ComboBoxItem>Reguler</ComboBoxItem>
                <ComboBoxItem>Presidential Suite / VIP</ComboBoxItem>
            </ComboBox>
        </StackPanel>
        <WrapPanel Grid.Row="2" Width="900">
            
        </WrapPanel>
    </Grid> 
</UserControl>
